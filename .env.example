# Database Configuration
MONGODB_URI=your_mongodb_connection_string_here
MONGO_URL=your_mongodb_connection_string_here

# Session Configuration
SESSION_SECRET=your_session_secret_here

# Email Configuration (for notifications)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

# Redis Configuration (optional, for session storage)
REDIS_URL=your_redis_url_here

# AI Configuration (optional - for enhanced AI features)
# The app works without these, using a free rule-based system
# Uncomment and add your API key for enhanced AI responses:

# Hugging Face API (free tier available)
# HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Google Gemini API (generous free tier)
# GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# OpenAI API (paid service)
# OPENAI_API_KEY=your_openai_api_key_here

# Environment
NODE_ENV=development