<div class="sidebar">
    <div class="sidebar-header">
        <img src="https://ui-avatars.com/api/?name=<%= user.fullName %>&background=6C63FF&color=fff" alt="User Avatar">
        <div>
            <h3 class="user-name"><%= user.fullName %></h3>
            <span class="user-plan">
                <% 
                const planNames = {
                    'free': 'Free Plan',
                    'basic': 'Basic Plan', 
                    'premium': 'Premium Plan',
                    'pro': 'Pro Plan'
                };
                const currentPlan = user.subscription?.plan || 'free';
                %>
                <%= planNames[currentPlan] || 'Free Plan' %>
            </span>
        </div>
    </div>
    
    <ul class="nav-menu">
        <li class="nav-item">
            <a href="/dashboard?token=<%= navToken %>" class="nav-link <%= currentPage === 'dashboard' ? 'active' : '' %>">
                <i class="fas fa-home"></i> Dashboard
            </a>
        </li>
        <li class="nav-item">
            <a href="/workouts?token=<%= navToken %>" class="nav-link <%= currentPage === 'workouts' ? 'active' : '' %>">
                <i class="fas fa-dumbbell"></i> Workouts
            </a>
        </li>
        <li class="nav-item">
            <a href="/progress?token=<%= navToken %>" class="nav-link <%= currentPage === 'progress' ? 'active' : '' %>">
                <i class="fas fa-chart-line"></i> Progress
            </a>
        </li>
        <li class="nav-item">
            <a href="/nutrition?token=<%= navToken %>" class="nav-link <%= currentPage === 'nutrition' ? 'active' : '' %>">
                <i class="fas fa-utensils"></i> Nutrition
            </a>
        </li>
        <li class="nav-item">
            <a href="/nutriscan?token=<%= navToken %>" class="nav-link <%= currentPage === 'nutriscan' ? 'active' : '' %>">
                <i class="fas fa-qrcode"></i> NutriScan
            </a>
        </li>
        <li class="nav-item">
            <a href="/meal-planner?token=<%= navToken %>" class="nav-link <%= currentPage === 'meal-planner' ? 'active' : '' %>">
                <i class="fas fa-calendar-check"></i> Meal Planner
            </a>
        </li>
        <li class="nav-item">
            <a href="/challenges?token=<%= navToken %>" class="nav-link <%= currentPage === 'challenges' ? 'active' : '' %>">
                <i class="fas fa-trophy"></i> Challenges
            </a>
        </li>
        <li class="nav-item">
            <a href="/health?token=<%= navToken %>" class="nav-link <%= currentPage === 'health' ? 'active' : '' %>">
                <i class="fas fa-heartbeat"></i> Health Metrics
            </a>
        </li>
        <li class="nav-item">
            <a href="/biometrics?token=<%= navToken %>" class="nav-link <%= currentPage === 'biometrics' ? 'active' : '' %>" data-premium="analytics">
                <i class="fas fa-chart-bar"></i> Biometrics
            </a>
        </li>
        <li class="nav-item">
            <a href="/community?token=<%= navToken %>" class="nav-link <%= currentPage === 'community' ? 'active' : '' %>">
                <i class="fas fa-users"></i> Community
            </a>
        </li>
        <li class="nav-item">
            <a href="/chat?token=<%= navToken %>" class="nav-link <%= currentPage === 'chat' ? 'active' : '' %>">
                <i class="fas fa-comments"></i> Chat
            </a>
        </li>
        <li class="nav-item">
            <a href="/ai-coach?token=<%= navToken %>" class="nav-link <%= currentPage === 'ai-coach' ? 'active' : '' %>" data-premium="ai-coach">
                <i class="fas fa-robot"></i> AI Coach
            </a>
        </li>
        <li class="nav-item">
            <a href="/subscription?token=<%= navToken %>" class="nav-link <%= currentPage === 'subscription' ? 'active' : '' %>">
                <i class="fas fa-crown"></i> Subscription
