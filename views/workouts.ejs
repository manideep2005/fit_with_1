        function calculateXPReward(duration) {
            const minutes = parseDuration(duration);
            if (minutes <= 15) return 40;
            if (minutes <= 30) return 60;
            if (minutes <= 45) return 80;
            if (minutes <= 60) return 100;
            return 120;
        }

