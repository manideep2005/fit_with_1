                    updateGamificationDisplay({
                        level: 1,
                        totalXP: 0,
                        progressToNextLevel: 0,
                        xpToNextLevel: 100,
                        streaks: { workout: { current: 0 } }
                    });
                }
            } catch (error) {
                console.error('Error loading gamification data:', error);
                // Show default values if error occurs
                updateGamificationDisplay({
                    level: 1,
                    totalXP: 0,
                    progressToNextLevel: 0,
                    xpToNextLevel: 100,
                    streaks: { workout: { current: 0 } }
                });
