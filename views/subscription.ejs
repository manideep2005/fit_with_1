<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Subscription - Fit-With-AI</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/shared-sidebar.css" rel="stylesheet">
    <style>
        :root {
            --primary: #6366f1;
            --secondary: #8b5cf6;
            --accent: #06b6d4;
            --success: #10b981;
            --warning: #f59e0b;
            --danger: #ef4444;
            --dark: #1f2937;
            --light: #f8fafc;
            --gray-100: #f1f5f9;
            --gray-200: #e2e8f0;
            --gray-300: #cbd5e1;
            --gray-600: #475569;
            --gray-700: #334155;
            --gray-800: #1e293b;
            --gray-900: #0f172a;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Inter', sans-serif;
            background-color: #ffffff;
            color: var(--gray-700);
            line-height: 1.6;
            min-height: 100vh;
        }
        
        .dashboard-container {
            display: grid;
            grid-template-columns: 280px 1fr;
            min-height: 100vh;
            gap: 20px;
            padding: 20px;
            background: var(--gray-100);
        }
        
        .main-content {
            display: flex;
            flex-direction: column;
            gap: 25px;
        }
        
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        
        .page-title {
            font-size: 2rem;
            font-weight: 700;
            color: var(--gray-800);
        }
        
        .welcome-card {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            border: none;
            color: white;
            padding: 30px;
            margin-bottom: 25px;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            text-align: center;
        }
        
        .plans-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .plan-card {
            background: white;
            border: 1px solid var(--gray-200);
            border-radius: 16px;
            padding: 30px;
            text-align: center;
            transition: all 0.3s ease;
            position: relative;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }
        
        .plan-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }
        
        .plan-card.popular {
            border-color: #6C63FF;
            transform: scale(1.05);
        }
        
        .plan-card.popular::before {
            content: 'üî• Most Popular';
            position: absolute;
            top: -10px;
            left: 50%;
            transform: translateX(-50%);
            background: #6C63FF;
            color: white;
            padding: 5px 15px;
            border-radius: 15px;
            font-size: 12px;
            font-weight: 600;
        }
        
        .plan-name {
            font-size: 24px;
            font-weight: 600;
            color: #333;
            margin-bottom: 10px;
        }
        
        .plan-price {
            font-size: 36px;
            font-weight: 700;
            color: #6C63FF;
            margin-bottom: 20px;
        }
        
        .plan-features {
            list-style: none;
            padding: 0;
            margin: 20px 0;
        }
        
        .plan-features li {
            padding: 8px 0;
            color: #666;
        }
        
        .plan-features li i {
            color: #28a745;
            margin-right: 10px;
        }
        
        .plan-btn {
            width: 100%;
            padding: 15px;
            background: #6C63FF;
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .plan-btn:hover {
            background: #5a54d6;
            transform: translateY(-2px);
        }
        
        .payment-modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            z-index: 1000;
        }
        
        .payment-content {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: white;
            border-radius: 15px;
            padding: 30px;
            width: 90%;
            max-width: 500px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        }
        
        .close-btn {
            position: absolute;
            top: 15px;
            right: 15px;
            background: #f8f9fa;
            border: none;
            width: 30px;
            height: 30px;
            border-radius: 50%;
            cursor: pointer;
        }
        
        .qr-container {
            text-align: center;
            background: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            margin: 20px 0;
        }
        
        .btn {
            padding: 10px 20px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            margin: 5px;
        }
        
        .btn-primary { background: #6C63FF; color: white; }
        .btn-success { background: #28a745; color: white; }
        .btn-outline { background: transparent; border: 1px solid #6C63FF; color: #6C63FF; }
        
        @media (max-width: 768px) {
            .main-content { margin-left: 0; }
            .plans-grid { grid-template-columns: 1fr; }
            .plan-card.popular { transform: none; }
        }
    </style>
</head>
<body>
    <%- include('partials/sidebar', { user: user, currentPage: 'subscription' }) %>
    
    <div class="main-content">
            <div class="page-header">
                <h1 class="page-title">Subscription</h1>
            </div>
            
            <div class="welcome-card">
                <h2 style="font-size: 1.5rem; margin-bottom: 0.5rem;"><i class="fas fa-crown"></i> Choose Your Plan</h2>
                <p style="opacity: 0.9; margin-bottom: 0;">Unlock premium features and accelerate your fitness journey</p>
            </div>

        <div class="plans-grid">
            <div class="plan-card">
                <div class="plan-name">Basic Pro</div>
                <div class="plan-price">‚Çπ2</div>
                <div style="color: #666; margin-bottom: 20px;">per week</div>
                <ul class="plan-features">
                    <li><i class="fas fa-check"></i> 100 AI Coach Queries</li>
                    <li><i class="fas fa-check"></i> Detailed Nutrition Tracking</li>
                    <li><i class="fas fa-check"></i> Progress Analytics</li>
                    <li><i class="fas fa-check"></i> Email Support</li>
                </ul>
                <button class="plan-btn" onclick="selectPlan('basic', 'Basic Pro', 2)">
                    Start Free Trial
                </button>
            </div>

            <div class="plan-card popular">
                <div class="plan-name">Premium Pro</div>
                <div class="plan-price">‚Çπ5</div>
                <div style="color: #666; margin-bottom: 20px;">per month</div>
                <ul class="plan-features">
                    <li><i class="fas fa-check"></i> Unlimited AI Coach</li>
                    <li><i class="fas fa-check"></i> Advanced Nutrition</li>
                    <li><i class="fas fa-check"></i> Personal Trainer AI</li>
                    <li><i class="fas fa-check"></i> Health Rewards</li>
                    <li><i class="fas fa-check"></i> Priority Support</li>
                </ul>
                <button class="plan-btn" onclick="selectPlan('premium', 'Premium Pro', 5)">
                    Start Free Trial
                </button>
            </div>

            <div class="plan-card">
                <div class="plan-name">Yearly Premium</div>
                <div class="plan-price">‚Çπ50</div>
                <div style="color: #666; margin-bottom: 20px;">per year <span style="color: #28a745;">(Save 17%)</span></div>
                <ul class="plan-features">
                    <li><i class="fas fa-check"></i> All Premium Features</li>
                    <li><i class="fas fa-check"></i> 2 Months Free</li>
                    <li><i class="fas fa-check"></i> Exclusive Content</li>
                    <li><i class="fas fa-check"></i> Personal Consultation</li>
                </ul>
                <button class="plan-btn" onclick="selectPlan('yearly', 'Yearly Premium', 50)">
                    Start Free Trial
                </button>
            </div>
        </div>
    </div>

    <!-- Payment Modal -->
    <div id="paymentModal" class="payment-modal">
        <div class="payment-content">
            <button class="close-btn" onclick="closePaymentModal()">&times;</button>
            
            <div style="text-align: center; margin-bottom: 20px;">
                <h3 id="paymentPlanName">Premium Pro</h3>
                <div style="font-size: 32px; color: #6C63FF; font-weight: 700;" id="paymentAmount">‚Çπ5</div>
            </div>

            <div class="qr-container">
                <img id="qrCodeImage" src="" alt="Payment QR Code" style="max-width: 200px;">
                <p style="color: #666; margin-top: 10px;">Scan with any UPI app</p>
            </div>

            <div style="background: #f8f9fa; padding: 15px; border-radius: 10px; margin: 20px 0;">
                <h4 style="margin-bottom: 10px;">UPI ID: 8885800887@ptaxis</h4>
                <button class="btn btn-outline" onclick="copyUpiId()">
                    <i class="fas fa-copy"></i> Copy UPI ID
                </button>
            </div>

            <div style="background: #fff3cd; padding: 15px; border-radius: 10px; margin: 20px 0; text-align: center;">
                <i class="fas fa-clock"></i> Auto-detection in 30 seconds
            </div>

            <div style="display: flex; gap: 10px;">
                <button class="btn btn-primary" onclick="openUpiApp()">
                    <i class="fas fa-mobile-alt"></i> Pay Now
                </button>
                <button class="btn btn-success" onclick="verifyPayment()">
                    <i class="fas fa-check"></i> I've Paid
                </button>
            </div>
        </div>
    </div>

    <script>
        let currentPaymentId = null;
        let paymentPolling = null;

        function selectPlan(planId, planName, price) {
            currentPaymentId = 'pay_' + Date.now();
            const upiUrl = `upi://pay?pa=8885800887@ptaxis&pn=Fit With AI&am=${price}&cu=INR&tn=Sub ${planName}`;
            const qrCodeUrl = `https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=${encodeURIComponent(upiUrl)}`;
            
            document.getElementById('paymentPlanName').textContent = planName;
            document.getElementById('paymentAmount').textContent = `‚Çπ${price}`;
            document.getElementById('qrCodeImage').src = qrCodeUrl;
            
            localStorage.setItem('currentPayment', JSON.stringify({
                paymentId: currentPaymentId,
                planId, planName, amount: price, upiUrl
            }));
            
            document.getElementById('paymentModal').style.display = 'block';
            startPaymentDetection();
        }

        function startPaymentDetection() {
            paymentPolling = setInterval(checkPaymentStatus, 3000);
            setTimeout(() => {
                if (paymentPolling) {
                    clearInterval(paymentPolling);
                    activateSubscription();
                }
            }, 30000);
        }

        async function checkPaymentStatus() {
            try {
                const response = await fetch('/api/payment-new/check-status', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ paymentId: currentPaymentId })
                });
                const result = await response.json();
                
                if (result.success && result.paymentReceived) {
                    clearInterval(paymentPolling);
                    activateSubscription();
                }
            } catch (error) {
                console.log('Payment check failed:', error);
            }
        }

        async function activateSubscription() {
            const paymentData = JSON.parse(localStorage.getItem('currentPayment'));
            
            try {
                const response = await fetch('/api/subscription/activate', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        planId: paymentData.planId,
                        planName: paymentData.planName,
                        amount: paymentData.amount,
                        paymentId: paymentData.paymentId
                    })
                });

                const result = await response.json();
                
                if (result.success) {
                    localStorage.removeItem('currentPayment');
                    closePaymentModal();
                    alert('‚úÖ Subscription activated successfully!');
                    location.reload();
                }
            } catch (error) {
                alert('‚ùå Failed to activate subscription');
            }
        }

        async function verifyPayment() {
            if (!confirm('Have you completed the payment?')) return;
            
            try {
                const response = await fetch('/api/payment-new/verify-manual', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ paymentId: currentPaymentId })
                });

                if (response.ok) {
                    clearInterval(paymentPolling);
                    activateSubscription();
                }
            } catch (error) {
                alert('Verification failed');
            }
        }

        function openUpiApp() {
            const paymentData = JSON.parse(localStorage.getItem('currentPayment'));
            if (paymentData?.upiUrl) {
                window.open(paymentData.upiUrl, '_blank');
            }
        }

        function copyUpiId() {
            navigator.clipboard.writeText('8885800887@ptaxis');
            alert('UPI ID copied!');
        }

        function closePaymentModal() {
            document.getElementById('paymentModal').style.display = 'none';
            if (paymentPolling) clearInterval(paymentPolling);
        }

        // Load current subscription status
        document.addEventListener('DOMContentLoaded', async function() {
            try {
                const response = await fetch('/api/user/subscription-status');
                const data = await response.json();
                
                if (data.success && data.subscription?.isActive) {
                    const banner = document.createElement('div');
                    banner.style.cssText = 'background: #d4edda; color: #155724; padding: 20px; border-radius: 10px; margin-bottom: 20px; text-align: center;';
                    banner.innerHTML = `<h3><i class="fas fa-crown"></i> You are a Premium User!</h3><p>Plan: ${data.subscription.planName}</p>`;
                    document.querySelector('.main-content').insertBefore(banner, document.querySelector('.page-header').nextSibling);
                }
            } catch (error) {
                console.log('Failed to load subscription status');
            }
        });
    </script>
</body>
</html>