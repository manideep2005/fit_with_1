    <script src="/js/enhanced-features.js"></script>
    <script>
        // Demo Functions
        function demoFormChecker(action) {
            const output = document.getElementById('formCheckerOutput');
            const status = document.getElementById('formCheckerStatus');
            
            switch(action) {
                case 'start':
                    status.innerHTML = '<i class="fas fa-circle"></i> Analyzing';
                    status.className = 'status-indicator active';
                    output.innerHTML = '<strong>AI Form Checker:</strong> üéØ Camera activated. Analyzing your squat form... Keep your knees aligned with your toes!';
                    break;
                case 'simulate':
                    output.innerHTML = '<strong>AI Form Checker:</strong> üìä Form Score: 85% (B) - Great job! Small adjustment: Keep your chest up and core engaged for better stability.';
                    break;
                case 'stop':
                    status.innerHTML = '<i class="fas fa-circle"></i> Inactive';
                    status.className = 'status-indicator inactive';
                    output.innerHTML = '<strong>AI Form Checker:</strong> ‚úÖ Session complete! You completed 15 reps with an average form score of 87%. Well done!';
                    break;
            }
        }

        function demoNotifications(type) {
            const output = document.getElementById('notificationsOutput');
            const list = document.getElementById('notificationsList');
            
            const notifications = {
                workout: {
                    title: "Time to crush your workout! üí™",
                    body: "You haven't worked out in 2 days. Your body is ready for action!",
                    class: "workout"
                },
                nutrition: {
                    title: "Hydration check! üíß",
                    body: "You're at 40% of your water goal. Keep sipping throughout the day!",
                    class: "nutrition"
                },
                motivation: {
                    title: "You're stronger than you think! üî•",
                    body: "Every workout is a step closer to your goals. You've got this!",
                    class: "motivation"
                },
                progress: {
                    title: "Amazing progress this week! üìà",
                    body: "You increased your workouts by 25% and hit all your nutrition goals!",
                    class: "progress"
                }
            };
            
            const notif = notifications[type];
            const newNotification = `
                <div class="notification-item ${notif.class}">
                    <div class="notification-header">
                        <span class="notification-title">${notif.title}</span>
                        <span class="notification-time">Just now</span>
                    </div>
                    <div class="notification-body">${notif.body}</div>
                </div>
            `;
            
            list.insertAdjacentHTML('afterbegin', newNotification);
            output.innerHTML = `<strong>Smart Notifications:</strong> üîî ${type.charAt(0).toUpperCase() + type.slice(1)} notification sent! AI analyzed your patterns to send this at the perfect time.`;
        }

        function demoChallenges(action) {
            const output = document.getElementById('challengesOutput');
            
            switch(action) {
                case 'create':
                    output.innerHTML = '<strong>Social Challenges:</strong> üèÜ Challenge created! "7-Day HIIT Challenge" is now live. Inviting your fitness buddies...';
                    break;
                case 'join':
                    output.innerHTML = '<strong>Social Challenges:</strong> ‚úÖ Joined "Step Master Challenge"! You\'re now competing with 247 other participants. Current rank: #23';
                    break;
                case 'leaderboard':
                    output.innerHTML = '<strong>Social Challenges:</strong> üìä Leaderboard updated! You moved up 5 positions to #18. Keep pushing to reach the top 10!';
                    break;
            }
        }

        function demoPredictions(type) {
            const output = document.getElementById('predictionsOutput');
            
            const predictions = {
                weight: '‚öñÔ∏è Weight Loss Prediction: Based on your current progress, you\'ll reach your goal weight of 68kg in 12 weeks with 87% confidence!',
                performance: 'üí™ Performance Forecast: Your strength will improve by 23% over the next 8 weeks. Focus on progressive overload!',
                goals: 'üéØ Goal Achievement: 94% probability of reaching your fitness goals by the target date. You\'re on track!'
            };
            
            output.innerHTML = `<strong>Progress Predictions:</strong> ${predictions[type]}`;
        }

        function demoVoice(action) {
            const output = document.getElementById('voiceOutput');
            const status = document.getElementById('voiceStatus');
            const button = document.getElementById('voiceButton');
            const commandsList = document.getElementById('voiceCommandsList');
            
            switch(action) {
                case 'start':
                    status.innerHTML = '<i class="fas fa-circle"></i> Listening';
                    status.className = 'status-indicator active';
                    button.classList.add('active');
                    output.innerHTML = '<strong>Voice Commands:</strong> üé§ Voice session started! Say "start workout" to begin or "help" for available commands.';
                    break;
                case 'toggle':
                    if (button.classList.contains('active')) {
                        button.classList.remove('active');
                        status.innerHTML = '<i class="fas fa-circle"></i> Inactive';
                        status.className = 'status-indicator inactive';
                        output.innerHTML = '<strong>Voice Commands:</strong> üîá Voice session ended. Great workout!';
                    } else {
                        demoVoice('start');
                    }
                    break;
                case 'simulate':
                    output.innerHTML = '<strong>Voice Commands:</strong> üó£Ô∏è "Start workout" ‚Üí ‚úÖ Starting your strength training session. I\'ll count your reps!';
                    break;
                case 'help':
                    commandsList.style.display = commandsList.style.display === 'none' ? 'grid' : 'none';
                    output.innerHTML = '<strong>Voice Commands:</strong> üìã Available commands shown above. Try saying any of these phrases!';
                    break;
            }
        }

        function demoBuddy(action) {
            const output = document.getElementById('buddyOutput');
            
            switch(action) {
                case 'search':
                    output.innerHTML = '<strong>Buddy Finder:</strong> üîç Searching for workout partners... Found 12 highly compatible matches within 5km!';
                    break;
                case 'nearby':
                    output.innerHTML = '<strong>Buddy Finder:</strong> üìç Found 3 fitness enthusiasts within 1km of your location. Sarah is online now!';
                    break;
                case 'matches':
                    output.innerHTML = '<strong>Buddy Finder:</strong> üíù Your top match is Sarah Johnson (92% compatibility). You share 4 common fitness goals!';
                    break;
            }
        }

        // Initialize demo
