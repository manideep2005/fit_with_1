    <script>
        // JavaScript for interactive elements can be added here
        document.querySelectorAll('.view-option').forEach(option => {
            option.addEventListener('click', () => {
                document.querySelectorAll('.view-option').forEach(opt => opt.classList.remove('active'));
                option.classList.add('active');
            });
        });

        document.querySelectorAll('.calendar-day').forEach(day => {
            day.addEventListener('click', () => {
                document.querySelectorAll('.calendar-day').forEach(d => d.classList.remove('day-selected'));
                day.classList.add('day-selected');
            });
        });
        document.querySelectorAll('.event-btn-primary').forEach(btn => {
            btn.addEventListener('click', () => {
                alert('Event started!');
            });
        });
        document.querySelectorAll('.event-btn-outline').forEach(btn => {
            btn.addEventListener('click', () => {
                alert('Event details opened!');
            });
        });
        // Logout confirmation
        function confirmLogout() {
            return confirm('Are you sure you want to logout?');
        }
    </script>
</body>
</html>