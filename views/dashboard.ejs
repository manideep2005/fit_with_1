        // Load daily insights
        async function loadDailyInsights() {
            try {
                const response = await fetch('/api/insights/daily');
                const result = await response.json();
                
                if (result.success && result.insights.length > 0) {
                    displayInsights(result.insights);
                } else {
                    displayDefaultInsights();
                }
            } catch (error) {
                console.error('Error loading insights:', error);
                displayDefaultInsights();
            }
        }
        
        // Display insights
        function displayInsights(insights) {
            const insightsGrid = document.getElementById('insightsGrid');
            insightsGrid.innerHTML = insights.map(insight => `
                <div class="insight-card ${insight.priority}">
                    <div class="insight-icon">${insight.icon}</div>
                    <div class="insight-content">
                        <h4>${insight.title}</h4>
                        <p>${insight.message}</p>
                        ${insight.action ? `<button class="insight-action" onclick="handleInsightAction('${insight.action}')">${insight.action}</button>` : ''}
                    </div>
                </div>
            `).join('');
        }
        
        // Display default insights
        function displayDefaultInsights() {
            const insightsGrid = document.getElementById('insightsGrid');
            insightsGrid.innerHTML = `
                <div class="insight-card medium">
                    <div class="insight-icon">üí™</div>
                    <div class="insight-content">
                        <h4>Ready to Start!</h4>
                        <p>Log your first workout to get personalized insights and recommendations.</p>
                        <button class="insight-action" onclick="document.getElementById('quickLogBtn').click()">Log Workout</button>
                    </div>
                </div>
                <div class="insight-card low">
                    <div class="insight-icon">üíß</div>
                    <div class="insight-content">
                        <h4>Stay Hydrated</h4>
                        <p>Remember to drink water throughout the day. Aim for 8-10 glasses daily.</p>
                        <button class="insight-action" onclick="quickActions.logWater()">Log Water</button>
                    </div>
                </div>
            `;
        }
        
        // Handle insight actions
        function handleInsightAction(action) {
            switch(action) {
                case 'Start a quick workout':
                    quickActions.quickWorkout();
                    break;
                case 'Log water intake':
                    quickActions.logWater();
                    break;
                case 'View progress':
                    window.location.href = '/progress?nav=' + window.navId;
                    break;
                case 'Continue streak':
                    document.getElementById('quickLogBtn').click();
                    break;
                case 'View nutrition plan':
                    window.location.href = '/nutrition?nav=' + window.navId;
                    break;
                default:
                    showNotification('Action not implemented yet', 'info');
            }
        }
        
        // Set dynamic greeting based on time
        function setDynamicGreeting() {
            const hour = new Date().getHours();
            const userName = '<%= user.onboardingData?.personalInfo?.firstName || (user.fullName && user.fullName !== "User" ? user.fullName.split(" ")[0] : "Manideep") %>';
            let greeting;
            
            if (hour < 12) {
                greeting = `Good Morning, ${userName}! üåÖ`;
            } else if (hour < 17) {
                greeting = `Good Afternoon, ${userName}! ‚òÄÔ∏è`;
            } else {
                greeting = `Good Evening, ${userName}! üåÜ`;
            }
            
            document.getElementById('dynamicGreeting').textContent = greeting;
        }
        
        // Initialize GSAP animations
        function initializeAnimations() {
            gsap.registerPlugin(ScrollTrigger);
            
            // Animate stat cards on load
            gsap.fromTo('.stat-card', 
                { y: 50, opacity: 0, scale: 0.9 },
                { 
