<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Virtual Doctor - Fit-With-AI</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        :root {
            --primary: #6366f1;
            --secondary: #8b5cf6;
            --accent: #06b6d4;
            --success: #10b981;
            --warning: #f59e0b;
            --danger: #ef4444;
            --dark: #1f2937;
            --light: #f8fafc;
            --gray-100: #f1f5f9;
            --gray-200: #e2e8f0;
            --gray-300: #cbd5e1;
            --gray-600: #475569;
            --gray-700: #334155;
            --gray-800: #1e293b;
            --gray-900: #0f172a;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Inter', sans-serif;
            background-color: #ffffff;
            color: var(--gray-700);
            line-height: 1.6;
            min-height: 100vh;
        }
        
        .dashboard-container {
            display: grid;
            grid-template-columns: 280px 1fr;
            min-height: 100vh;
            gap: 20px;
            padding: 20px;
            background: var(--gray-100);
        }
        
        .main-content {
            display: flex;
            flex-direction: column;
            gap: 25px;
        }
        
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        
        .page-title {
            font-size: 2rem;
            font-weight: 700;
            color: var(--gray-800);
        }
        
        .welcome-card {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            border: none;
            color: white;
            padding: 30px;
            margin-bottom: 25px;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }
        
        .welcome-title {
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
        }
        
        .welcome-subtitle {
            opacity: 0.9;
            margin-bottom: 1.5rem;
        }
        
        .workout-plan {
            background: white;
            border: 1px solid var(--gray-200);
            border-radius: 16px;
            padding: 30px;
            margin-bottom: 25px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }
        
        .workout-plan:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        }
        
        .workout-day {
            display: flex;
            padding: 15px;
            background: var(--gray-100);
            border-radius: 12px;
            margin-bottom: 15px;
            align-items: center;
        }
        
        .workout-day:last-child {
            margin-bottom: 0;
        }
        
        .day-name {
            font-weight: 600;
            min-width: 100px;
            color: var(--gray-800);
        }
        
        .day-workout {
            flex: 1;
            color: var(--gray-600);
        }
        
        .day-status {
            width: 24px;
            height: 24px;
            border-radius: 50%;
            background: var(--gray-300);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }
        
        .day-status.completed {
            background: var(--success);
        }
        
        .nutrition-tip {
            background: white;
            border: 1px solid var(--gray-200);
            border-radius: 16px;
            padding: 30px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }
        
        .nutrition-tip:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        }
        
        .tip-header {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
        }
        
        .tip-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: rgba(99, 102, 241, 0.1);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            color: var(--primary);
        }
        
        .tip-title {
            font-weight: 600;
            color: var(--gray-800);
        }
        
        .tip-content {
            color: var(--gray-600);
        }
        
        .btn {
            padding: 12px 24px;
            border-radius: 50px;
            font-family: 'Inter', sans-serif;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            border: none;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: white;
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(99, 102, 241, 0.3);
        }
        
        .btn-outline {
            background: white;
            color: var(--primary);
            border: 2px solid var(--primary);
        }
        
        .btn-outline:hover {
            background: var(--primary);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(99, 102, 241, 0.3);
        }
        
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        @media (max-width: 768px) {
            .dashboard-container {
                flex-direction: column;
            }
            
            .sidebar {
                width: 100%;
                padding: 1rem;
            }
            
            .main-content {
                padding: 1rem;
            }
        }
    </style>
    <link rel="stylesheet" href="/css/shared-sidebar.css">
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar Navigation -->
        <%- include('partials/sidebar', { currentPage: 'virtual-doctor', navId: navId }) %>

        <!-- Main Content -->
        <div class="main-content">
            <div class="page-header">
                <h1 class="page-title"><i class="fas fa-user-md"></i> Virtual Doctor</h1>
            </div>

            <div class="workout-plan">
                <h3 style="margin-bottom: 15px; color: var(--gray-800);">Describe Your Symptoms</h3>
                <p style="color: var(--gray-600); margin-bottom: 20px;">AI-powered symptom analysis using comprehensive medical database</p>
                
                <div style="display: flex; gap: 15px; margin-bottom: 20px;">
                    <input type="text" style="flex: 1; padding: 15px 20px; background: white; border: 2px solid var(--gray-200); border-radius: 15px; color: var(--gray-700); font-size: 1rem; outline: none; transition: all 0.3s ease; font-family: 'Inter', sans-serif;" id="symptomInput" 
                           placeholder="Type your symptoms (e.g., 'headache and fever', 'stomach pain', 'cough and sore throat')">
                    <button style="background: linear-gradient(135deg, var(--primary), var(--secondary)); border: none; padding: 15px 25px; border-radius: 15px; color: white; font-weight: 600; cursor: pointer; transition: all 0.3s ease;" onclick="searchSymptoms()">
                        <i class="fas fa-search"></i> Analyze
                    </button>
                </div>
                
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px;">
                    <div style="background: white; border: 2px solid var(--primary); border-radius: 25px; padding: 12px 20px; text-align: center; cursor: pointer; transition: all 0.3s ease; color: var(--primary); position: relative; overflow: hidden;" onclick="quickSearch('headache')">
                        <i class="fas fa-head-side-cough"></i> Headache
                    </div>
                    <div style="background: white; border: 2px solid var(--primary); border-radius: 25px; padding: 12px 20px; text-align: center; cursor: pointer; transition: all 0.3s ease; color: var(--primary); position: relative; overflow: hidden;" onclick="quickSearch('fever')">
                        <i class="fas fa-thermometer-half"></i> Fever
                    </div>
                    <div style="background: white; border: 2px solid var(--primary); border-radius: 25px; padding: 12px 20px; text-align: center; cursor: pointer; transition: all 0.3s ease; color: var(--primary); position: relative; overflow: hidden;" onclick="quickSearch('cough')">
                        <i class="fas fa-lungs"></i> Cough
                    </div>
                    <div style="background: white; border: 2px solid var(--primary); border-radius: 25px; padding: 12px 20px; text-align: center; cursor: pointer; transition: all 0.3s ease; color: var(--primary); position: relative; overflow: hidden;" onclick="quickSearch('stomach pain')">
                        <i class="fas fa-stomach"></i> Stomach Pain
                    </div>
                    <div style="background: white; border: 2px solid var(--primary); border-radius: 25px; padding: 12px 20px; text-align: center; cursor: pointer; transition: all 0.3s ease; color: var(--primary); position: relative; overflow: hidden;" onclick="quickSearch('fatigue')">
                        <i class="fas fa-tired"></i> Fatigue
                    </div>
                    <div style="background: white; border: 2px solid var(--primary); border-radius: 25px; padding: 12px 20px; text-align: center; cursor: pointer; transition: all 0.3s ease; color: var(--primary); position: relative; overflow: hidden;" onclick="quickSearch('nausea')">
                        <i class="fas fa-dizzy"></i> Nausea
                    </div>
                </div>
            </div>

            <div class="workout-plan" id="resultsSection" style="display: none;">
                <h3 style="margin-bottom: 20px; color: var(--gray-800);">
                    <i class="fas fa-brain"></i> AI Analysis Results
                </h3>
                <div id="resultsContainer"></div>
            </div>

            <div class="nutrition-tip">
                <div class="tip-header">
                    <div class="tip-icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <h3 class="tip-title">Medical Disclaimer</h3>
                </div>
                <p class="tip-content">This AI analysis is for informational purposes only and should not replace professional medical advice. Always consult with a healthcare provider for proper diagnosis and treatment.</p>
            </div>
        </div>
    </div>

    <script>
        // Handle Enter key press
        document.getElementById('symptomInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchSymptoms();
            }
        });

        function quickSearch(symptom) {
            document.getElementById('symptomInput').value = symptom;
            searchSymptoms();
        }

        async function searchSymptoms() {
            const input = document.getElementById('symptomInput').value.trim();
            if (!input) return;

            const resultsSection = document.getElementById('resultsSection');
            const resultsContainer = document.getElementById('resultsContainer');
            
            // Show loading
            resultsSection.style.display = 'block';
            resultsContainer.innerHTML = `
                <div style="text-align: center; padding: 40px; color: var(--gray-600);">
                    <div style="border: 3px solid var(--gray-300); border-top: 3px solid var(--primary); border-radius: 50%; width: 40px; height: 40px; animation: spin 1s linear infinite; margin: 0 auto 15px;"></div>
                    <p>Analyzing symptoms with AI...</p>
                </div>
            `;

            try {
                const response = await fetch('/api/virtual-doctor-analyze', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ symptoms: input })
                });

                const result = await response.json();
                
                if (result.success) {
                    displayResults(result.matches, result.aiAnalysis);
                } else {
                    displayError(result.error || 'Analysis failed');
                }
            } catch (error) {
                console.error('Search error:', error);
                displayError('Failed to analyze symptoms. Please try again.');
            }
        }

        function displayResults(matches, aiAnalysis) {
            const resultsContainer = document.getElementById('resultsContainer');
            
            if (!matches || matches.length === 0) {
                resultsContainer.innerHTML = `
                    <div style="text-align: center; padding: 40px; color: var(--gray-600);">
                        <i class="fas fa-search" style="font-size: 3rem; margin-bottom: 15px; opacity: 0.5;"></i>
                        <h4>No matching conditions found</h4>
                        <p>Try describing your symptoms differently or consult a healthcare professional.</p>
                    </div>
                `;
                return;
            }

            let html = '';
            
            if (aiAnalysis) {
                html += `
                    <div class="workout-day" style="border-left: 4px solid var(--primary); background: rgba(99, 102, 241, 0.1); margin-bottom: 20px;">
                        <div style="flex: 1;">
                            <div style="font-size: 1.2rem; font-weight: 600; color: var(--primary); margin-bottom: 8px;">
                                <i class="fas fa-robot"></i> AI Analysis Summary
                            </div>
                            <div style="color: var(--gray-700);">${aiAnalysis}</div>
                        </div>
                    </div>
                `;
            }

            matches.forEach((match, index) => {
                const condition = match.condition;
                const confidence = Math.round(match.confidence * 100);
                
                html += `
                    <div class="workout-day" style="flex-direction: column; align-items: flex-start; margin-bottom: 15px;">
                        <div style="display: flex; justify-content: space-between; align-items: center; width: 100%; margin-bottom: 10px;">
                            <div style="font-size: 1.2rem; font-weight: 600; color: var(--gray-800);">
                                ${condition.name}
                            </div>
                            <span style="background: var(--primary); color: white; padding: 4px 12px; border-radius: 15px; font-size: 0.8rem; font-weight: 600;">${confidence}% match</span>
                        </div>
                        <div style="color: var(--gray-600); margin-bottom: 15px;">${condition.description}</div>
                        <button style="background: white; border: 2px solid var(--primary); color: var(--primary); padding: 8px 16px; border-radius: 8px; cursor: pointer; font-size: 0.9rem; transition: all 0.3s ease;" onclick="toggleDetails('details-${index}')">
                            <i class="fas fa-chevron-down"></i> View Details
                        </button>
                        
                        <div style="display: none; margin-top: 15px; width: 100%;" id="details-${index}">
                            <div style="margin-bottom: 20px;">
                                <div style="font-weight: 600; color: var(--gray-800); margin-bottom: 8px; display: flex; align-items: center; gap: 8px;">
                                    <i class="fas fa-list-ul"></i> Common Symptoms
                                </div>
                                <ul style="list-style: none; padding-left: 15px;">
                                    ${condition.symptoms.map(symptom => `<li style="color: var(--gray-600); margin-bottom: 5px; position: relative;">• ${symptom}</li>`).join('')}
                                </ul>
                            </div>

                            <div style="margin-bottom: 20px;">
                                <div style="font-weight: 600; color: var(--gray-800); margin-bottom: 8px; display: flex; align-items: center; gap: 8px;">
                                    <i class="fas fa-utensils"></i> Recommended Foods
                                </div>
                                <ul style="list-style: none; padding-left: 15px;">
                                    ${condition.foods.recommended.map(food => `<li style="color: var(--gray-600); margin-bottom: 5px; position: relative;">• ${food}</li>`).join('')}
                                </ul>
                            </div>

                            <div style="margin-bottom: 20px;">
                                <div style="font-weight: 600; color: var(--gray-800); margin-bottom: 8px; display: flex; align-items: center; gap: 8px;">
                                    <i class="fas fa-ban"></i> Foods to Avoid
                                </div>
                                <ul style="list-style: none; padding-left: 15px;">
                                    ${condition.foods.avoid.map(food => `<li style="color: var(--gray-600); margin-bottom: 5px; position: relative;">• ${food}</li>`).join('')}
                                </ul>
                            </div>

                            <div style="margin-bottom: 20px;">
                                <div style="font-weight: 600; color: var(--gray-800); margin-bottom: 8px; display: flex; align-items: center; gap: 8px;">
                                    <i class="fas fa-pills"></i> Medications
                                </div>
                                <ul style="list-style: none; padding-left: 15px;">
                                    ${condition.medications.map(med => `<li style="color: var(--gray-600); margin-bottom: 5px; position: relative;">• ${med}</li>`).join('')}
                                </ul>
                            </div>

                            <div style="margin-bottom: 20px;">
                                <div style="font-weight: 600; color: var(--gray-800); margin-bottom: 8px; display: flex; align-items: center; gap: 8px;">
                                    <i class="fas fa-home"></i> Home Remedies
                                </div>
                                <ul style="list-style: none; padding-left: 15px;">
                                    ${condition.homeRemedies.map(remedy => `<li style="color: var(--gray-600); margin-bottom: 5px; position: relative;">• ${remedy}</li>`).join('')}
                                </ul>
                            </div>

                            <div style="margin-bottom: 20px;">
                                <div style="font-weight: 600; color: var(--gray-800); margin-bottom: 8px; display: flex; align-items: center; gap: 8px;">
                                    <i class="fas fa-hospital"></i> When to See a Doctor
                                </div>
                                <p style="color: var(--warning); font-weight: 500; padding: 15px; background: rgba(245, 158, 11, 0.1); border-radius: 8px; border-left: 4px solid var(--warning);">
                                    ${condition.whenToSeeDoctor}
                                </p>
                            </div>
                        </div>
                    </div>
                `;
            });

            resultsContainer.innerHTML = html;
        }

        function displayError(message) {
            const resultsContainer = document.getElementById('resultsContainer');
            resultsContainer.innerHTML = `
                <div style="text-align: center; padding: 40px; color: var(--gray-600);">
                    <i class="fas fa-exclamation-triangle" style="font-size: 3rem; margin-bottom: 15px; color: var(--warning);"></i>
                    <h4>Analysis Error</h4>
                    <p>${message}</p>
                </div>
            `;
        }

        function toggleDetails(detailsId) {
            const details = document.getElementById(detailsId);
            const button = details.previousElementSibling;
            const icon = button.querySelector('i');
            
            if (details.style.display === 'none' || !details.style.display) {
                details.style.display = 'block';
                icon.className = 'fas fa-chevron-up';
                button.innerHTML = '<i class="fas fa-chevron-up"></i> Hide Details';
            } else {
                details.style.display = 'none';
                icon.className = 'fas fa-chevron-down';
                button.innerHTML = '<i class="fas fa-chevron-down"></i> View Details';
            }
        }
    </script>
</body>
</html>