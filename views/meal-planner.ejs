                        <div class="nutrition-item">
                            <span>Total Calories</span>
                            <span id="weeklyCalories">0</span>
                        </div>
                        <div class="nutrition-item">
                            <span>Average Daily Calories</span>
                            <span id="avgDailyCalories">0</span>
                        </div>
                        <div class="nutrition-item">
                            <span>Protein</span>
                            <span id="weeklyProtein">0g</span>
                        </div>
                        <div class="nutrition-item">
                            <span>Carbs</span>
                            <span id="weeklyCarbs">0g</span>
                        </div>
                        <div class="nutrition-item">
                            <span>Fat</span>
                            <span id="weeklyFat">0g</span>
                        </div>
                    </div>
                </div>
                
                <div class="sidebar-panel">
                    <h3 class="panel-title">AI Recipe Suggestions</h3>
                    
                    <div class="recipe-card" onclick="showRecipeDetails('recipe1')">
                        <div class="recipe-image">
                            <img src="https://images.unsplash.com/photo-1546069901-ba9599a7e63c?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80" alt="Protein Power Bowl">
                        </div>
                        <div class="recipe-title">Protein Power Bowl</div>
